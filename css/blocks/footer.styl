$footer-icon-color = #8B9298

.footer
	width 100%
	display flex
	align-items flex-start
	justify-content space-between
	padding-right calc(17vw - 150px)
	padding-left 75px 
	padding-top 50px
	padding-bottom 50px
	background-color #28343F
	font-size 16px
	font-family 'GothamProLight'
	margin-top auto
	color white
	flex-wrap wrap
	position relative
	z-index 5
	
	+below(sm)
		padding 15px
		flex-direction column-reverse
		align-items flex-start
		text-align center
		font-size 14px
	>*	
		margin-bottom 20px
		&:not(:last-child)
			margin-right 20px
	&__block
		display flex 
	&__phones
		display flex 
		align-items center
		flex-direction column
	&__copy 
		+below(sm)
			align-self center
	.icon
		width 32px 
		height 32px
		fill $footer-icon-color 
		opacity .5
		margin-right 20px
		margin-top -3px
	a 
		color white
		text-decoration none
		&:hover, &:focus
			opacity .8
			
	small 
		font-size 14px
		display flex
		margin-top .8em