.contacts
	&__map
		height 480px
		position relative
		+below(sm)
			margin-bottom 510px
			font-size 18px
		#contacts-map
			height 100%
	&__info
		position absolute 
		right 50px
		top 50%
		transform translateY(-50%)
		padding 60px 30px
		box-shadow 0 0 5px 3px rgba(0, 0, 0, .1)
		background-color #fff
		z-index 10
		+below(sm)
			position relative
			transform translateY(0)
			top 0 
			left 0
			margin-bottom 30px
			height 100%
			display flex
			flex-direction column
			
	&__row
		display flex 
		align-items flex-start
		&:not(:last-child)
			margin-bottom 20px
			+below(sm)
				margin-bottom 40px
		&:first-child
			+below(sm)
				margin-top auto
		&:last-child
			+below(sm)
				margin-bottom auto
		svg 
			margin-right 20px
			fill #b4ccdc
			height 16px 
			width 16px
			flex-shrink 0
		p 
			margin 0
			font-weight 400
	&__emails
		font-weight 600
		a 
			font-weight 400
			color #82abc5
			text-decoration underline
			&:hover, &:focus
				color darken(#82abc5, 30%)