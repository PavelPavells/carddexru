$btn-red = #D03839

.btn-secondary
	font-family 'GothamProRegular'
	font-weight bold
	font-size 14px
	padding 3px 6px
	border-radius 5px
	color currentColor
	border 2px solid currentColor
	display inline-block
	text-decoration none
	
.btn-primary
	font-family 'GothamProRegular'
	font-size 16px
	font-weight 300
	padding 15px 55px
	border-radius 30px
	border 1px solid black
	background-color transparent
	color black
	margin-top .6em
	display inline-block
	transition all .2s ease-in-out
	cursor pointer
	text-decoration none
	+below(lg)
		font-size 14px
		padding 10px 35px
	+below(md)
		font-size 13px
		padding 8px 30px
	&:hover, &:focus
		color white
		background-color $btn-red
		border-color $btn-red
	&:active
		color white
		background-color black
		border-color black
	&:disabled
		background-color #d7dbde
		color #969696
		cursor default
		&:hover
			background-color #d7dbde
			color #969696
	&.white-btn
		border-color white
		color white
		&:hover
			border-color $btn-red
	&--small
		padding 10px 35px
		
.btn-more
	color #1D68D9
	background-color transparent
	border none
	text-decoration underline
	padding 0
	cursor pointer
	font-size 16px