$background = #FBFBFB
.main-catalog
	background-color $background
	&__top
		display flex
		justify-content space-between
		align-items center
		margin-bottom 1em
		flex-wrap wrap
		h2 
			margin-top 0
			margin-bottom 0
			margin-right 20%
			+below(sm)
				margin-right 0			
		a
			display flex 
			align-items center
			flex-shrink 0
			margin-right auto
			+below(sm)
				margin-left 42px
			svg 
				margin-right .3em
	h4
		min-height 3em
		margin-bottom 1em
	&__tabs
		margin-bottom 2em
		+below(sm)
			display flex
			flex-direction column
			align-items flex-start
			margin-top 3em
	&__tab
		font-size 12px
		font-family "GothamProMedium"
		font-weight normal
		text-decoration none
		display inline-block
		text-align center
		padding 10px 25px
		border-radius 5px 
		position relative
		margin-right 3em
		transition all .2s ease-in-out
		+below(sm)
			margin-right 0
			margin-bottom 1em
			box-shadow 0px 1px 3px 0px rgba(0,0,0,0.3);
		&:hover, &:focus
			transform translateY(-2px)
			box-shadow 0px 2px 5px 0px rgba(0,0,0,0.3);
	
		&.active-tab, &:active
			background-color white
			box-shadow inset 0px 2px 5px 0px rgba(0,0,0,0.3);
			&:before
				content ''
				position absolute
				bottom 0
				width 35px
				left 50%
				transform translateX(-50%)
				height 2px
				background-color #1D68D9		
	&__content
		display flex
		flex-wrap wrap
		
	.cat
		padding 30px 38px
		border 1px solid #E8E8E8
		transition all .2s ease-in-out
		cursor pointer
		display flex
		flex-direction column
		height calc(100% - 50px)
		text-decoration none
		width 280px
		height 100%
		height 340px
		padding-bottom 10px 	
		+below(630px)
			width 240px
		&:hover
			transform translateY(-2px)
			box-shadow 0px 2px 5px 0px rgba(0,0,0,0.3);
			.cat-arrow
				width 70px
				color #d03839
		&-title 
			font-family "GothamProLight"
			font-size 17px
			margin-bottom .8em
			color #1D68D9
			margin-right -15px
			min-height 2.4em
		&-sub-title
			font-size 14px
			font-family "GothamProLight"
			margin-bottom auto
			margin-right -10px
			
		&-arrow
			align-self flex-end
			margin-bottom 20px
			margin-top 20px
			height 1px
			width 38px
			color black 
			transition all .2s ease-in-out
			background-color currentColor
			position relative
			&:before, &:after
				content ''
				position absolute
				right 0
				width 15px
				background-color currentColor 
				height 1px
			&:before
				transform rotate(45deg) translateY(-6.5px)
			&:after
				transform rotate(-45deg) translateY(6.5px)
				
		.cat-image-wrapper
			width 100%
			position relative
			padding-bottom 140px
			margin-bottom .5em
			img
				max-width 100%
				max-height 100%
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
	>.row
		margin-left -70px
		margin-right -70px
		>div
			padding-left 70px
			padding-right 70px  
	.row.custom
		margin-left -10px
		margin-right -10px
		+below(md)
			margin-left -15px
			margin-right -15px
		.col-xs-6
			padding-left 10px 
			padding-right 10px
			height 360px
			margin-bottom 30px
			+below(md)
				padding-left 15px 
				padding-right 15px
