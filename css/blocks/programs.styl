.ui
	padding-top 0
	&__title 
		margin-bottom .6em
	&__block
		padding-top 1.5em
		padding-bottom 1.5em
		display flex 
		flex-wrap wrap 
		justify-content space-between
		border-bottom 1px solid $lightgrey
		align-items center
	&__info
		width 48%
		+below(xs)
			width 100%
	&__pics
		width 48%
		+below(xs)
			width 100%
		ul
			display flex
			margin 0
			list-style-type none
			justify-content space-between
		li 
			width 30%
			margin 0
			cursor pointer
			img 
				width 100%
	&__block-title
		display flex
		align-items center
		margin-bottom 1em
		svg.icon
			margin-right 1em
			width 1.5em
			height 1.5em
		h4
			margin 0
			&:before 
				display none
	&__text
		+below(xs)
			margin-bottom 1em
	
	