$pag-bg = #F4CCC8

.new-items
	position relative
	font-family 'GothamProRegular'
	overflow visible
	.owl-carousel .owl-stage-outer
		overflow visible!important
	&__list
		display flex
		justify-content space-between
		flex-wrap wrap
		overflow hidden
		list-style-type none
		margin-left 0
		width auto
		margin-bottom -40px
		+below(md)
			padding-right 20px
			margin-right -55px
		+below(sm)
			padding-right 120px
			margin-right -15px
		+below(xs)
			padding-right 40px
		+below(400px)
			padding-right 20px
		.owl-dots
			text-align center
			margin-right 20px
			margin-top 20px
		.owl-dot
			display inline-block
			width 8px
			height 8px
			border-radius 4px
			border 2px solid #6f6f6f
			background-color #6f6f6f
			margin 5px 
			&.active
				border-color #057dd1
				background-color transparent
	.article 
		width calc(33% - 20px)
		margin-bottom 40px
		color black
		flex-shrink 0
		overflow hidden
		transition all .2s ease-in-out
		position relative
		+below(sm)
			max-width 90%
		+below(md)
			width 90%
		&:hover
			.article__btn 
				opacity 1
		&__date
			padding-left 42px
			font-size 14px
		&__heading
			font-size 14px
			font-family "GothamProBold"
			margin-bottom 15px
			margin-top 30px
			text-transform uppercase
		&__text
			font-size 14px 
			font-weight 300
			+above(xl)
				font-size 15px
							
		&__info
			display flex
			margin-bottom 50px
		&__image 
			width 100%
			flex-shrink 0
			position relative
			display flex
			img
				min-height 100%
				min-width 100%
				height auto
				width auto
		&__btn
			position absolute
			top 0
			left 0
			right 0 
			bottom 0 
			background-color rgba(0,0,0,.4)
			display flex
			align-items center
			justify-content center
			opacity 0
			transition all .2s ease-in-out
		&__price
			text-align center
			margin-bottom 1em
			font-weight bold
				
.pag
	font-family "GothamProBold"
	font-size 14px
	width 100%
	display flex
	justify-content center
	margin-top 60px
	below(md)
		width 0
	&__num
		position relative
		width 24px
		display inline-flex
		align-items center
		justify-content center
		margin-x 10px
		text-decoration none
		&:before
			content ''
			position absolute
			background-color $pag-bg
			width 100%
			height 4px
			bottom 0
			opacity 0
			transition all .2s ease-in-out
			z-index -1
		&:hover
			&:before
				bottom 35%
				opacity 1
	&__left, &__right
		width 65px 
		display inline-flex
		position relative
		height 20px
		margin-x 15px
		background-color transparent 
		border none
		cuersor pointer
		&:before
			content ''
			position absolute
			left 0
			right 0
			bottom 50%
			height 1px
			background-color #000
			transform translateY(-50%)
			transition all .2s ease-in-out
		&:focus
			outline none
		&.disabled 
			opacity .3
			cuersor default
		
	&__left
		.arrow
			width 0
			height 0
			border-top  7px solid transparent
			border-bottom  7px solid transparent
			border-right 7px solid black
			position absolute
			left 0
			bottom 50%
			transform translate(-100%,49%)
			transition all .2s ease-in-out
		&:hover, &:focus
			.arrow
				left -10px
			&:before
				left -10px
	&__right
		.arrow
			width 0
			height 0
			border-top  7px solid transparent
			border-bottom  7px solid transparent
			border-left 7px solid black
			position absolute
			right 0
			bottom 50%
			transform translate(100%,49%)
			transition all .2s ease-in-out
		&:hover, &:focus
			.arrow
				right -10px
			&:before
				right -10px
		
			