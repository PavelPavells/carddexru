$sidebar-icon-grey = #BCCBD7
$sidebar-icon-red = #D03839

$font-left-menu = #4F5458

.sidebar
	position fixed
	left 0
	top 0
	height 100vh
	width 115px
	
	// box-shadow 0 0 25px #dbdbdb
	background-color #fff
	border-right 1px solid #E8E8E8
	z-index 1
	transition padding .2s ease-in-out
	padding-top 82px
	displayf flex
	+below(sm)
		display none
	&__list-wrapper
		height 100%  
		width 115px
		position relative
	&__list
		text-align center
		min-height 100%
		display flex
		flex-direction column
		justify-content flex-start
		padding 25px 0
	&__item
		padding-bottom 5px
		margin-right 10px
		margin-left 10px
		&:not(:last-child)
			border-bottom 1px solid $sidebar-icon-grey
			margin-bottom 20px
		&.dark-bg
			position relative
			&:before
				content ''
				position absolute
				left -10px
				right -10px
				top -21px
				bottom 0
				background-color rgba(188, 203, 215, .2);
				z-index 1
			>*
				position relative 
				z-index 2
			
	&__link
		display flex
		flex-direction column
		align-items center
		text-decoration none
		&-icon
			width 40px
			height 40px
			// margin-bottom 5px
			// margin-left 10px
			flex-shrink 0
			svg
				fill #8e979e
				width 40px
				height 40px
		&-text
			font-size 11px
			font-family 'GothamProRegular'
			font-weight 400
			transition all .2s ease-in-out
			// padding-x 10px
			color $font-left-menu
			padding-y 5px 
			text-align center
			max-width 100%
		&:hover, &:focus
			svg 
				fill black
			.sidebar__link-text 
				color black
				
