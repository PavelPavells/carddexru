h2
	font-size 36px
	font-family 'GothamProLight'
	font-weight 300
	color #272020

	+below(md)
		font-size 32px
	+below(xs)
		font-size 26px 	
			

textarea 
	resize none
	


		

input, textarea 
	width 100% 
	border-radius 10px 
	background-color transparent
	border 1px solid #d3d3d3
	font-size 18px 
	padding 5px 10px


a 
	transition all .2s ease-in-out